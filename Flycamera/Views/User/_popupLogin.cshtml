@using Flycamera.App_Start
@using Flycamera.ViewModel
<div class="popup-signIn--user">
    <div class="popup-header--user">
        @if (!Request.IsAuthenticated) {
            <ul class="tab-content">
                <li class="active"><a href="javascript:;" title="Đăng nhập">Đăng nhập</a></li>
                <li><a href="javascript:;" title="Đăng ký">Đăng ký</a></li>
            </ul>
        }
        <a href="javascript:;" class="close-popup--user" title="close">x</a>
    </div>
    <div class="popup-content--user">
        @if (!Request.IsAuthenticated)
        {
            Html.RenderPartial(@StaticVariable._boxLogin);
            Html.RenderPartial(@StaticVariable._boxRegister, new UserVM());
        }
        else
        {
            <div class="frm-signout">
                <strong>@Html.Encode(User.Identity.Name)</strong>
                @Html.ActionLink("Sign Out", "Logout", "User")
            </div>
        }
    </div>
</div>
<div class="overlay"></div>
